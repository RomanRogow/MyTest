<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="6" author="yourname">
        <comment>Удаление старых колонок дат</comment>

        <sql>
            -- Безопасно удаляем старые колонки если они существуют
            ALTER TABLE employees DROP COLUMN IF EXISTS create_at;
            ALTER TABLE employees DROP COLUMN IF EXISTS update_at;
        </sql>

        <!-- Rollback не нужен, т.к. мы просто удаляем лишнее -->
    </changeSet>

</databaseChangeLog>